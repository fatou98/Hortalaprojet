    {% block table%}

<div class="container bg-warning divtable" >
<h1>LISTE DES Biens</h1>
<table class="table table-responsive table-condensed" id="listebientable">
<thead>
    <tr>
        <th>nom client</th>
        <th>adresse client</th>
        <th>bien</th>
        <th>adresse bien</th>
        <th>type bien</th>
                <th>prix</th>
        <th>image</th>

        <th>details</th>
    </tr>
</thead>
  {% for reservation in reservations %}
